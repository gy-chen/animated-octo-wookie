<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#cc000000" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <Button
            android:id="@+id/button_red_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/red_color"
            android:onClick="onCanvasChooseColorButtonClick" />

        <Button
            android:id="@+id/button_blue_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_color"
            android:onClick="onCanvasChooseColorButtonClick" />

        <Button
            android:id="@+id/button_yellow_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yellow_color"
            android:onClick="onCanvasChooseColorButtonClick" />

        <Button
            android:id="@+id/button_green_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/green_color"
            android:onClick="onCanvasChooseColorButtonClick" />

        <Button
            android:id="@+id/button_orange_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/orange_color"
            android:onClick="onCanvasChooseColorButtonClick" />

        <Button
            android:id="@+id/button_purple_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/purple_color"
            android:onClick="onCanvasChooseColorButtonClick" />

        <Button
            android:id="@+id/button_black_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/black_color"
            android:onClick="onCanvasChooseColorButtonClick" />
    </LinearLayout>

</HorizontalScrollView>