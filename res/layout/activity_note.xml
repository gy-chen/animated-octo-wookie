<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoteActivity" >

    <tw.edu.nutc.laalaa.note.utils.CustomScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:fadeScrollbars="false"
        android:scrollbarStyle="outsideInset" >

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
    </tw.edu.nutc.laalaa.note.utils.CustomScrollView>

    <Button
        android:id="@+id/add_edittext"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:alpha="40"
        android:text="T" />

    <Button
        android:id="@+id/add_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/add_edittext"
        android:alpha="40"
        android:text="I" />

    <Button
        android:id="@+id/add_canvas"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/add_image"
        android:alpha="40"
        android:text="C" />

    <Button
        android:id="@+id/menu_test"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/add_canvas"
        android:alpha="40"
        android:text="M" />

    <ViewStub
        android:id="@+id/viewstub_canvassetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:inflatedId="@+id/canvas_setting_view"
        android:layout="@layout/canvas_setting" />

    <ViewStub
        android:id="@+id/viewstub_trashbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:inflatedId="@+id/trashbar"
        android:layout="@layout/trashbar" />

</RelativeLayout>